        <!--  Define the custom template selector  -->
        <local:CustomNotificationTemplateSelector x:Key="CustomNotificationTemplateSelector" />

        <Style TargetType="controls:Notification">
            <!--  Replace the default template selector with the one you defined above  -->
            <Setter Property="ContentTemplateSelector" Value="{StaticResource CustomNotificationTemplateSelector}" />

            <!--  Add the templates that you want to use  -->
            <Style.Resources>
                <DataTemplate x:Key="PinkStringTemplate" DataType="{x:Type system:String}">
                    <Label
                        MinHeight="80"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="{Binding}"
                        Foreground="DeepPink" />
                </DataTemplate>

                <DataTemplate x:Key="CustomNotificationTemplate" DataType="{x:Type local:CustomThemedNotificationContent}">
                    <Border
                        x:Name="Border"
                        MinHeight="80"
                        Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ContentControl
                                Width="25"
                                Height="25"
                                Margin="0,0,12,0"
                                VerticalAlignment="Top">
                                <ContentControl
                                    x:Name="Icon"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </ContentControl>
                            <DockPanel Grid.Column="1">
                                <TextBlock
                                    DockPanel.Dock="Top"
                                    FontWeight="Medium"
                                    Text="{Binding Title}"
                                    TextTrimming="CharacterEllipsis">
                                    <TextBlock.Effect>
                                        <DropShadowEffect
                                            RenderingBias="Performance"
                                            ShadowDepth="1"
                                            Color="Black" />
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock
                                    Margin="0,0,12,0"
                                    Opacity="1"
                                    Text="{Binding Message}"
                                    TextWrapping="Wrap">
                                    <TextBlock.Effect>
                                        <DropShadowEffect
                                            RenderingBias="Performance"
                                            ShadowDepth="1"
                                            Color="Black" />
                                    </TextBlock.Effect>
                                </TextBlock>
                            </DockPanel>
                        </Grid>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Type}" Value="Information">
                            <Setter TargetName="Icon" Property="Content" Value="{StaticResource InfoIcon}" />
                            <Setter TargetName="Border" Property="Background" Value="CornflowerBlue" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="Success">
                            <Setter TargetName="Icon" Property="Content" Value="{StaticResource SuccessIcon}" />
                            <Setter TargetName="Border" Property="Background" Value="LimeGreen" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="Warning">
                            <Setter TargetName="Icon" Property="Content" Value="{StaticResource WarningIcon}" />
                            <Setter TargetName="Border" Property="Background" Value="Orange" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="Error">
                            <Setter TargetName="Icon" Property="Content" Value="{StaticResource ErrorIcon}" />
                            <Setter TargetName="Border" Property="Background" Value="OrangeRed" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>